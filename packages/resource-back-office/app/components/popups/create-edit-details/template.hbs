<div
  class="fixed top-0 bottom-0 right-0 left-0 bg-textPrimary bg-opacity-30 transition-all duration-200"
>
  <div class="flex h-screen justify-center items-center">
    <div
      class="bg-white p-5 rounded-3xl
        {{if (eq @objectType "Enterprise") "w-1/2" "w-[500px]"}}"
    >
      <div class="flex flex-row justify-end">
        <h1 class="ml-5 w-full text-2xl font-bold text-textPrimary text-center">
          {{this.popupName}}
        </h1>
        <button
          type="button"
          {{on "click" (fn @toggleDisplayModal @popupType)}}
        >
          <img src="/assets/icons/close-button.svg" alt="close button icon" />
        </button>
      </div>
      {{#if (eq @objectType "Enterprise")}}
        <Forms::Enterprise
          @changeset={{@changeset}}
          @saveFunction={{@saveFunction}}
          @popupType={{@popupType}}
          @popupName={{this.popupName}}
        />
      {{else}}
        {{#if (eq @objectType "Resource")}}
          <Forms::Resources
            @changeset={{@changeset}}
            @store={{@store}}
            @saveFunction={{@saveFunction}}
            @popupType={{@popupType}}
            @popupName={{this.popupName}}
            @enterpriseOptions={{@enterpriseOptions}}
          />
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>