<form {{on "submit" this.submit}} ...attributes>
  <div class="flex flex-col items-stretch mt-4">
    <Ui::Input
      @label="Prénom"
      @name="firstName"
      @value={{changeset-get @changeset "firstName"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "firstName"}}
      @placeholder="Prénom"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
    <Ui::Input
      @label="Nom de famille"
      @name="lastName"
      @value={{changeset-get @changeset "lastName"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "lastName"}}
      @placeholder="Nom de famille"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
    <Ui::Input
      @label="Adresse mail"
      @name="emailAddress"
      @value={{changeset-get @changeset "emailAddress"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "emailAddress"}}
      @placeholder="Adresse mail"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
    <Ui::Input
      @label="Adresse mail n°2"
      @name="emailAddress2"
      @value={{changeset-get @changeset "emailAddress2"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "emailAddress2"}}
      @placeholder="Adresse mail n°2"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{false}}
      type="text"
    />
    <Ui::Input
      @label="N° de téléphone"
      @name="phoneNumber"
      @value={{changeset-get @changeset "phoneNumber"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "phoneNumber"}}
      @placeholder="N° de téléphone"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
    <Ui::Input
      @label="N° de téléphone n°2"
      @name="phoneNumber2"
      @value={{changeset-get @changeset "phoneNumber2"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "phoneNumber2"}}
      @placeholder="N° de téléphone n°2"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{false}}
      type="text"
    />
    <Ui::Input
      @label="Entreprise"
      @name="enterprise"
      @value={{changeset-get @changeset "enterprise"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "enterprise"}}
      @placeholder="Nom de l'entreprise"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
    <Ui::Input
      @label="Coût"
      @name="cost"
      @value={{changeset-get @changeset "cost"}}
      @containerStyle=""
      @labelStyle="text-primary font-base mt-1 block"
      @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
      @updateValue={{fn this.changeInput "cost"}}
      @placeholder="Coût (€/h)"
      @disabled={{if (eq @popupType "details") true false}}
      @mandatory={{true}}
      type="text"
    />
  </div>
  {{#if (or (eq @popupType "new") (eq @popupType "edit"))}}
    <button
      type="submit"
      class="block mt-5 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
      disabled={{@changeset.isInvalid}}
    >
      {{@popupName}}
    </button>
  {{/if}}
</form>