<div class="fixed inset-0 bg-primary bg-opacity-30 transition-all duration-200">
  <div
    class="flex h-screen justify-center items-center transition-all duration-200
      {{if @displayNewTypeModal "mr-[432px]"}}
      {{if @displayNewTitleModal "mr-[432px]"}}
      {{if @displayNewEnterpriseModal "mr-[432px]"}}"
  >
    <div class="bg-white p-5 rounded-3xl w-[500px] font-normal">
      <div class="flex flex-row justify-end">
        <h1 class="ml-5 w-full text-2xl font-normal text-center">
          Occupation pour
        </h1>
        <p class="w-full font-normal text-navbarBg text-start text-2xl">
          {{@resourceName}}
        </p>
        <button type="button" {{on "click" @toggleDisplayNewAssignmentModal}}>
          <img
            src="/assets/icons/close-button.svg"
            alt="close button icon"
            class="inline h-5 w-auto mr-1"
          />
        </button>
      </div>
      <div class="text-center mt-3">
        {{dayFormat @choosingDay}}
      </div>
      <form {{on "submit" this.submit}} ...attributes>
        <div class="flex flex-row w-max mx-auto mt-4">
          <div class="w-max">
            <label>
              Morning
              <input
                id="morningInput"
                type="checkbox"
                checked={{this.assignment.boolMorning}}
                {{on "click" this.selectedMorning}}
              />
            </label>
          </div>
          <div class="w-max ml-5">
            <label>
              Afternoon
              <input
                id="afternoonInput"
                type="checkbox"
                checked={{this.assignment.boolAfternoon}}
                {{on "click" this.selectedAfternoon}}
              />
            </label>
          </div>
        </div>
        <div class="flex flex-row mt-4 justify-between">
          <p class="w-20 grow-0">Type</p>
          {{! template-lint-disable no-inline-styles }}
          {{! template-lint-disable style-concatenation }}
          <select
            id="typeSelect"
            class="grow text-center mx-4 rounded-xl px-2 bg-white"
            style="border: 1px solid {{this.assignment.assignmentType.assignmentTypeColor}}"
            {{on "change" this.selectType}}
          >
            {{#each @model.assignmentType as |assignmentType|}}
              <option value={{assignmentType.assignmentTypeName}}>
                {{assignmentType.assignmentTypeName}}
              </option>
            {{/each}}
          </select>
          <button
            type="button"
            class="grow-0"
            {{on "click" @toggleDisplayNewTypeModal}}
          >
            <img src="/assets/icons/plus-button.svg" alt="close button icon" />
          </button>
        </div>

        <div class="flex flex-row mt-4 justify-between">
          <p class="w-[76px] grow-0">Title</p>
          <select
            id="titleSelect"
            class="grow text-center mx-4 rounded-xl px-2 bg-white"
            {{! template-lint-disable no-inline-styles }}
            {{! template-lint-disable style-concatenation }}
            style="border: 1px solid {{this.assignment.assignmentType.assignmentTypeColor}}"
            {{on "change" this.selectTitle}}
          >
            {{#each @model.assignmentTitle as |assignmentTitle|}}
              <option value={{assignmentTitle.assignmentTitleName}}>
                {{assignmentTitle.assignmentTitleName}}
              </option>
            {{/each}}
          </select>
          <button
            type="button"
            class="grow-0"
            {{on "click" @toggleDisplayNewTitleModal}}
          >
            <img src="/assets/icons/plus-button.svg" alt="close button icon" />
          </button>
        </div>
        <div class="flex flex-row mt-4 justify-between">
          <p class="w-[76px] grow-0">Entreprise</p>
          {{! template-lint-disable no-inline-styles }}
          {{! template-lint-disable style-concatenation }}
          <select
            id="enterpriseSelect"
            class="grow text-center mx-4 rounded-xl px-2 bg-white"
            style="border: 1px solid {{this.assignment.assignmentType.assignmentTypeColor}}"
            {{on "change" this.selectEnterprise}}
          >
            {{#each @model.enterprise as |enterprise|}}
              <option value={{enterprise.name}}>
                {{enterprise.name}}
              </option>
            {{/each}}
          </select>
          <button
            type="button"
            class="grow-0"
            {{on "click" @toggleDisplayNewEnterpriseModal}}
          >
            <img src="/assets/icons/plus-button.svg" alt="close button icon" />
          </button>
        </div>
        <div class="flex flex-row mt-4 justify-between">
          <div class="w-max">
            <label class="cursor-pointer">
              Ajouter un commentaire ?
              <input
                id="commentInput"
                type="checkbox"
                class="cursor-pointer"
                {{on "click" this.toggleComment}}
              />
            </label>
          </div>
          <div class="w-max">
            <label class="cursor-pointer">
              Ã€ distance ?
              <input id="remoteInput" type="checkbox" class="cursor-pointer" />
            </label>
          </div>
        </div>
        {{#if this.isAddingComment}}
          <div class="flex mt-4">
            <textarea
              id="comment"
              class="border border-navbarBg rounded-xl grow p-2 max-h-80 min-h-[66px]"
              rows="2"
            ></textarea>
          </div>
        {{/if}}
        <button
          type="submit"
          class="block mt-5 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all"
          disabled={{@changeset.isInvalid}}
        >
          <p>Ajouter l'occupation</p>
        </button>
      </form>
    </div>
  </div>
</div>