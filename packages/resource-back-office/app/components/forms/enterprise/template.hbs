<div
  class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200"
>
  <div class="flex h-screen justify-center items-center">
    <div class="bg-white p-5 rounded-3xl w-[500px]">
      <div class="flex flex-row justify-end">
        <h1 class="ml-5 w-full text-2xl font-bold text-primary text-center">
          {{@popupName}}
        </h1>
      </div>
      <form {{on "submit" this.saveFunction}} ...attributes>
        <div class="flex flex-col items-stretch mt-4">
          <Ui::Input
            @label="Nom"
            @name="name"
            @value={{changeset-get @changeset "name"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "name"}}
            @placeholder="Nom de l'entreprise"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{true}}
            type="text"
          />
          <Ui::Input
            @label="N° d'entreprise"
            @name="enterpriseNumber"
            @value={{changeset-get @changeset "enterpriseNumber"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "enterpriseNumber"}}
            @placeholder="0123456789"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{false}}
            type="text"
          />
          <Ui::Input
            @label="N° de TVA"
            @name="vatNumber"
            @value={{changeset-get @changeset "vatNumber"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "vatNumber"}}
            @placeholder="BE0123456789"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{false}}
            type="text"
          />
          <Ui::Input
            @label="Ville"
            @name="city"
            @value={{changeset-get @changeset "city"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "city"}}
            @placeholder="Mons"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{true}}
            type="text"
          />
          <Ui::Input
            @label="Adresse"
            @name="address"
            @value={{changeset-get @changeset "address"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "address"}}
            @placeholder="Rue, numéro"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{true}}
            type="text"
          />
          <Ui::Input
            @label="Adresse mail"
            @name="emailAddress"
            @value={{changeset-get @changeset "emailAddress"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "emailAddress"}}
            @placeholder="Adresse mail de l'entreprise"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{true}}
            type="text"
          />
          <Ui::Input
            @label="Adresse mail n°2"
            @name="emailAddress2"
            @value={{changeset-get @changeset "emailAddress2"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "emailAddress2"}}
            @placeholder="2e adresse mail de l'entreprise"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{false}}
            type="text"
          />
          <Ui::Input
            @label="N° de téléphone"
            @name="phoneNumber"
            @value={{changeset-get @changeset "phoneNumber"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "phoneNumber"}}
            @placeholder="N° de téléphone de l'entreprise"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{true}}
            type="text"
          />
          <Ui::Input
            @label="N° de téléphone n°2"
            @name="phoneNumber2"
            @value={{changeset-get @changeset "phoneNumber2"}}
            @containerStyle=""
            @labelStyle="text-primary font-base mt-1 block"
            @inputStyle="w-full rounded-md outline-none transition-all duration-200 border-2 border-primary focus:border-navbarBg pt-1.5 pb-1.5 px-3 font-base text-primary focus:outline-none focus:ring-0"
            @updateValue={{fn this.changeInput "phoneNumber2"}}
            @placeholder="2e n° de téléphone de l'entreprise"
            @disabled={{if (eq @popupType "details") true false}}
            @mandatory={{false}}
            type="text"
          />
        </div>
        {{#if (or (eq @popupType "new") (eq @popupType "edit"))}}
          <button
            type="submit"
            class="block mt-5 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
            disabled={{@changeset.isInvalid}}
          >
            {{@popupName}}
          </button>
        {{/if}}
      </form>
    </div>
  </div>
</div>