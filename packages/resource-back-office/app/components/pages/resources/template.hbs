{{! Eviter les ifs à répétition ca nique le principe du component et c'est redondant }}
<div class="mt-12 ml-12 mr-10 max-w-[95%]" id="resourcePage">
  <h1 class="text-3xl font-black text-primary">Ressources</h1>
  <div
    class="mt-1 w-max rounded-full hover:bg-navbarBg transition-all duration-200"
  >
    <button
      type="button"
      class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
      {{on "click" (fn this.toggleDisplayResourceModal "new")}}
      data-test-enterprises="addResourceButton"
    >
      <div class="text-lg flex flex-row">
        <img
          src="/assets/icons/plus-button.svg"
          alt="plus button icon"
          class="inline h-6 w-6 my-auto"
        />
        <p class="ml-1">Ajouter une ressource</p>
      </div>
    </button>
  </div>
  <table class="w-full min-w-[850px]">
    <thead>
      <th class="text-primary text-lg text-left">Nom complet</th>
      <th class="text-primary text-lg">Entreprise</th>
      <th class="text-primary text-lg">Adresse email</th>
      <th class="text-primary text-lg">N° de téléphone</th>
    </thead>
    <tbody>
      {{#each @model.resource as |resource|}}
        <Ui::List
          @type="resource"
          @object={{resource}}
          @displayDetails={{this.displayResourceDetails}}
          @displayDelete={{this.displayDeleteResource}}
        />
      {{/each}}
    </tbody>
  </table>
  {{#if this.displayNewResourceModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="new"
      @objectType="Resource"
      @toggleDisplayModal={{this.toggleDisplayResourceModal}}
      @saveFunction={{this.addResource}}
      @enterpriseOptions={{@model.enterprise}}
    />
  {{/if}}
  {{#if this.displayEditResourceModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="edit"
      @objectType="Resource"
      @toggleDisplayModal={{this.toggleDisplayResourceModal}}
      @saveFunction={{this.editResource}}
      @enterpriseOptions={{@model.enterprise}}
    />
  {{/if}}
  {{#if this.displayDetailsResourceModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="details"
      @objectType="Resource"
      @toggleDisplayModal={{this.toggleDisplayResourceModal}}
      @enterpriseOptions={{@model.enterprise}}
    />
  {{/if}}
  {{#if this.displayDeleteResourceModal}}
    <Popups::Delete
      @type="resource"
      @toggleDisplayDeleteModal={{this.toggleDisplayDeleteResourceModal}}
      @deleteFunction={{this.deleteResource}}
      @objectIdToDelete={{this.resource.id}}
    />
  {{/if}}
</div>