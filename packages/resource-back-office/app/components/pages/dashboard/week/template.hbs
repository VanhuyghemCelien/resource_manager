<div class="mt-12 ml-28 max-w-[90%] font-normal">
  <div class="flex flex-row">
    <h1 class="text-3xl font-black text-primary">
      Month :
      {{this.currentMonth}}
    </h1>
    <a href="/dashboard/month/1" class="h-full ml-4 mt-auto text-secondary">
      Show by Month
    </a>
  </div>
  <div class="flex flex-row h-max mt-4">
    <div class="flex flex-row w-max">
      <button
        class="block text-center h-[34px] w-[34px] pr-[2px] ml-1 rounded-full bg-white text-navbarBg border border-navbarBg mx-auto cursor-pointer hover:bg-navbarBg hover:text-white hover:bg-opacity-75 active:bg-navbarBg active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
        type="button"
        {{on "click" this.choosingDayLess}}
      >
        <p class="w-full text-center">&#x276E;</p>
      </button>
      <button
        class="block text-center py-1 px-5 ml-1 rounded-full bg-white text-navbarBg border border-navbarBg mx-auto cursor-pointer hover:bg-navbarBg hover:text-white hover:bg-opacity-75 active:bg-navbarBg active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
        type="button"
        {{on "click" this.choosingDayActual}}
      >
        Actual
      </button>
      <button
        class="block text-center h-[34px] w-[34px] pl-[2px] ml-1 rounded-full bg-white text-navbarBg border border-navbarBg mx-auto cursor-pointer hover:bg-navbarBg hover:text-white hover:bg-opacity-75 active:bg-navbarBg active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
        type="button"
        {{on "click" this.choosingDayPlus}}
      >
        <p class="w-full text-center">&#x276F;</p>
      </button>
    </div>
    <div class="ml-4 h-max my-auto">
      <label name="specificDay">
        Choose a specific day
        {{! template-lint-disable no-down-event-binding }}
        <input
          type="date"
          name="specificDay"
          required
          onkeydown="return false"
          label="specificDay"
          class="border border-navbarBg h-[34px] rounded-full text-navbarBg px-2 text-center ml-1"
          value={{this.specificDay}}
          {{on "change" this.choosingSpecificDay}}
        />
      </label>
    </div>
  </div>

  <div class="mt-3">
    <div class="grid grid-cols-6 gap-1 mb-5">
      <div class="text-center">Semaine</div>
      <div
        class="text-center
          {{if
            (eq (dayFormat this.monday) (dayFormat this.today))
            "border-b-4 border-b-navbarBg"
          }}"
      >
        {{dayFormat this.monday}}
      </div>
      <div
        class="text-center
          {{if
            (eq (dayFormat this.tuesday) (dayFormat this.today))
            "border-b-4 border-b-navbarBg"
          }}"
      >
        {{dayFormat this.tuesday}}
      </div>
      <div
        class="text-center
          {{if
            (eq (dayFormat this.wednesday) (dayFormat this.today))
            "border-b-4 border-b-navbarBg"
          }}
          "
      >
        {{dayFormat this.wednesday}}
      </div>
      <div
        class="text-center
          {{if
            (eq (dayFormat this.thursday) (dayFormat this.today))
            "border-b-4 border-b-navbarBg"
          }}"
      >
        {{dayFormat this.thursday}}
      </div>
      <div
        class="text-center
          {{if
            (eq (dayFormat this.friday) (dayFormat this.today))
            "border-b-4 border-b-navbarBg"
          }}"
      >
        {{dayFormat this.friday}}
      </div>
    </div>
    {{#each @model.resource as |resource|}}
      <div class="grid grid-cols-6 gap-3 mt-3">
        <div class="grid grid-cols-2">
          <div class="flex flex-row justify-end mr-5 my-auto">
            <img
              src={{resource.image}}
              alt="portrait-icon"
              class="rounded-full w-[50px] h-[50px] object-cover"
            />
          </div>
          <div class="text-left my-auto">
            <h1 class="text-primary">
              {{resource.firstname}}
              {{resource.lastname}}
            </h1>
            <p class="text-secondary text-left">{{resource.enterprise}}</p>
          </div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-t-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.monday
              )
            }}
            title="title"
          >
          </button>
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-b-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.monday
              )
            }}
          >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-t-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.tuesday
              )
            }}
          >
          </button>
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-b-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.tuesday
              )
            }}
          >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-t-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.wednesday
              )
            }}
          >
          </button>
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-b-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.wednesday
              )
            }}
          >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-t-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.thursday
              )
            }}
          >
          </button>
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-b-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.thursday
              )
            }}
          >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-t-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.friday
              )
            }}
          >
          </button>
          <button
            type="button"
            class="bg-grey bg-opacity-100 hover:border-2 h-[52px] hover:border-navbarBg text-center rounded-b-xl text-white"
            {{on
              "click"
              (fn
                this.toggleDisplayNewAssignmentModal
                resource.lastname
                resource.firstname
                this.friday
              )
            }}
          >
          </button>
        </div>
      </div>
    {{/each}}
  </div>
  {{#if this.displayNewAssignmentModal}}
    <div
      class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200"
    >
      <div
        class="flex h-screen justify-center items-center
          {{if this.displayNewTypeModal "mr-[432px]"}}
          {{if this.displayNewTitleModal "mr-[432px]"}}
          {{if this.displayNewEnterpriseModal "mr-[432px]"}}
          transition-all duration-200"
      >
        <div class="bg-white p-5 rounded-3xl w-[500px] font-normal">
          <div class="flex flex-row justify-end">
            <h1 class="ml-[19px] w-full text-2xl font-bold text-center">
              Assignment for
            </h1>
            <p class="w-full font-semibold text-navbarBg text-start text-2xl">
              {{this.resourceName}}
            </p>
            <button
              type="button"
              {{on "click" this.toggleDisplayNewAssignmentModal}}
            >
              <img
                src="/assets/icons/close-button.svg"
                alt="close button icon"
                class="inline h-5 w-auto mr-1"
              />
            </button>
          </div>
          <div class="text-center mt-3">
            {{dayFormat this.choosingDay}}
          </div>
          <form aria-label="newEnterpriseForm">
            <div class="flex flex-row w-max mx-auto mt-4">
              <div class="w-max">
                <label>
                  Morning
                  <input id="morningInput" type="checkbox" />
                </label>
              </div>
              <div class="w-max ml-5">
                <label>
                  Afternoon
                  <input id="afternoonInput" type="checkbox" />
                </label>
              </div>
            </div>
            <div class="flex flex-row mt-4 justify-between">
              <p class="w-[76px] grow-0">Type</p>
              <select 
                id="typeSelect" 
                class="grow text-center mx-4 rounded-xl px-2 bg-white"
                {{!-- template-lint-disable no-inline-styles --}}{{!-- template-lint-disable style-concatenation --}}
                style="border: 1px solid {{this.assignmentType.assignmentTypeColor}}" {{on "change" this.selectType}}
              >
                {{#each @model.assignmentType as |assignmentType|}}
                  <option value={{assignmentType.assignmentTypeName}}>
                    {{assignmentType.assignmentTypeName}}
                  </option>
                {{/each}}
              </select>
              <button
                type="button"
                class="grow-0"
                {{on "click" this.toggleDisplayNewTypeModal}}
              >
                <img
                  src="/assets/icons/plus-button.svg"
                  alt="close button icon"
                />
              </button>
            </div>
            <div class="flex flex-row mt-4 justify-between">
              <p class="w-[76px] grow-0">Title</p>
              <select 
                id="titleSelect"
                class="grow text-center mx-4 rounded-xl px-2 bg-white"
                {{!-- template-lint-disable no-inline-styles --}}{{!-- template-lint-disable style-concatenation --}}
                style="border: 1px solid {{this.assignmentType.assignmentTypeColor}}" {{on "change" this.selectTitle}}
              >
                {{#each @model.assignmentTitle as |assignmentTitle|}}
                  <option value={{assignmentTitle.assignmentTitleName}}>
                    {{assignmentTitle.assignmentTitleName}}
                  </option>
                {{/each}}
              </select>
              <button
                type="button"
                class="grow-0"
                {{on "click" this.toggleDisplayNewTitleModal}}
              >
                <img
                  src="/assets/icons/plus-button.svg"
                  alt="close button icon"
                />
              </button>
            </div>
            <div class="flex flex-row mt-4 justify-between">
              <p class="w-[76px] grow-0">Enterprise</p>
              <select 
                id="enterpriseSelect"
                class="grow text-center mx-4 rounded-xl px-2 bg-white"
                {{!-- template-lint-disable no-inline-styles --}}{{!-- template-lint-disable style-concatenation --}}
                style="border: 1px solid {{this.assignmentType.assignmentTypeColor}}" {{on "change" this.selectEnterprise}}
              >
                {{#each @model.enterprise as |enterprise|}}
                  <option value={{enterprise.enterpriseName}}>
                    {{enterprise.enterpriseName}}
                  </option>
                {{/each}}
              </select>
              <button
                type="button"
                class="grow-0"
                {{on "click" this.toggleDisplayNewEnterpriseModal}}
              >
                <img
                  src="/assets/icons/plus-button.svg"
                  alt="close button icon"
                />
              </button>
            </div>
            <div class="flex flex-row mt-4 justify-between">
              <div class="w-max">
                <label class="cursor-pointer">
                  Add a comment ?
                  <input
                    id="commentInput"
                    type="checkbox"
                    class="cursor-pointer"
                    {{on "click" this.toggleComment}}
                  />
                </label>
              </div>
              <div class="w-max">
                <label class="cursor-pointer">
                  Remote ?
                  <input
                    id="remoteInput"
                    type="checkbox"
                    class="cursor-pointer"
                  />
                </label>
              </div>
            </div>
            {{#if this.comment}}
              <div class="flex mt-4">
                <textarea
                  id="CommentText"
                  class="border border-navbarBg rounded-xl grow p-2 max-h-[350px] min-h-[66px]"
                  rows="2"
                ></textarea>
              </div>
            {{/if}}
            <button
              type="button"
              class="block mt-5 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all du
              {{on "click" this.addAssignment}}
            >
              <p>Add Assignment</p>
            </button>
          </form>

        </div>
      </div>
    </div>
  {{/if}}
  {{#if this.displayNewTypeModal}}
    <div
      class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200"
    >
      <div
        class="flex h-screen justify-center ml-[432px] items-center transition-all duration-200"
      >
        <div class="bg-white p-5 rounded-3xl w-[314px]">
          <div class="flex flex-row justify-center">
            <h1 class="ml-[19px] w-full text-2xl font-bol text-center">
              Add a new Type:
            </h1>
            <button type="button" {{on "click" this.toggleDisplayNewTypeModal}}>
              <img
                src="/assets/icons/close-button.svg"
                alt="close button icon"
              />
            </button>
          </div>
          <input
            type="text"
            id="typeInput"
            class="border border-primary rounded mx-auto w-full mt-4"
            {{on "change" (fn this.editAssignmentTypeField "name")}}
          />
          <div class="flex flex-row mt-2 justify-between">
            <p>Multiple colors for this type* ?</p>
            <input
              type="checkbox"
              id="multicolorsInput"
              class="my-auto ml-4"
              {{on "click" this.toggleColor}}
            />
          </div>
          {{#if (eq this.color false)}}
            <div class="flex flex-row mt-2 justify-between">
              <p>Select the color to apply<br />for this type of assignment</p>
              <input
                type="color"
                id="colorInput"
                class="my-auto ml-4"
                {{on "change" (fn this.editAssignmentTypeField "color")}}
              />
            </div>
          {{/if}}
          <button
            type="button"
            class="block mt-4 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
            {{on "click" this.addAssignmentType}}
          >
            <p>Create type</p>
          </button>
          <p class="text-xs text-secondary mt-2">
            *If checked, you will have to select a color for each title created
            for this type of assignment
          </p>
        </div>
      </div>
    </div>
  {{/if}}
  {{#if this.displayNewTitleModal}}
    <div
      class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200"
    >
      <div
        class="flex h-screen justify-center ml-[432px] items-center transition-all duration-200"
      >
        <div class="bg-white p-5 rounded-3xl w-[314px]">
          <div class="flex flex-row justify-center">
            <h1 class="ml-[19px] w-full text-2xl font-bol text-center">
              Add a new Title:
            </h1>
            <button
              type="button"
              {{on "click" this.toggleDisplayNewTitleModal}}
            >
              <img
                src="/assets/icons/close-button.svg"
                alt="close button icon"
              />
            </button>
          </div>
          <div>
            <input
              type="text"
              id="titleInput"
              class="border border-primary rounded mx-auto w-full mt-4"
              {{on "change" (fn this.editAssignmentTitleField "name")}}
            />
          </div>
          {{#if this.color}}
            <div class="flex flex-row mt-2 justify-between">
              <p>Select the color to apply<br />for this type of assignment</p>
              <input
                type="color"
                id="colorTitleInput"
                class="my-auto ml-4"
                {{on "change" (fn this.editAssignmentTitleField "color")}}
              />
            </div>
          {{/if}}
          <button
            type="button"
            class="block mt-4 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
            {{on "click" this.addAssignmentTitle}}
          >
            <p>Create title</p>
          </button>
        </div>
      </div>
    </div>
  {{/if}}
  {{#if this.displayNewEnterpriseModal}}
    <div
      class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200"
    >
      <div
        class="flex h-screen justify-center ml-[432px] items-center transition-all duration-200"
      >
        <div class="bg-white p-5 rounded-3xl w-[314px]">
          <div class="flex flex-row justify-center">
            <h1 class="ml-[19px] w-full text-2xl font-bol text-center">
              Add a new Title:
            </h1>
            <button
              type="button"
              {{on "click" this.toggleDisplayNewEnterpriseModal}}
            >
              <img
                src="/assets/icons/close-button.svg"
                alt="close button icon"
              />
            </button>
          </div>
          <div>
            <input
              type="text"
              id="enterpriseInput"
              class="border border-primary rounded mx-auto w-full mt-4"
              {{on "change" this.editEnterpriseField}}
            />
            <button
              type="button"
              class="block mt-4 text-center py-2 px-5 rounded-md bg-navbarBg text-white mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
              {{on "click" this.addEnterprise}}
            >
              <p>Create title</p>
            </button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>