<div class="mt-12 ml-28 max-w-[90%]">
  <h1 class="text-3xl font-black text-primary">Month : {{this.currentMonth}}</h1>
  <button class="bg-error text-black rounded-lg mx-1" type="button" {{on "click" this.choosingDayLess}}> &lt; &lt; Previous</button>
  <button class="bg-triptykblue text-white rounded-lg mx-1"type="button" {{on "click" this.choosingDayActual}}>Actual</button>
  <button class="bg-green text-black rounded-lg mx-1"type="button" {{on "click" this.choosingDayPlus}}>Next &gt; &gt;</button>
  <label name="specificDay">
    SpecificDay
    {{!-- template-lint-disable no-down-event-binding --}}
    <input type="date" name="specificDay" required onkeydown="return false" label="specificDay" class="border-4 border-triptykblue" value={{this.specificDay}} {{on "change" this.choosingSpecificDay }} />
  </label>
  <div class="mt-3">
    <div class="grid grid-cols-6 gap-1 mb-5">
      <div class="text-center">Semaine</div>
      <div class="text-center {{if (eq this.monday this.today) "border-b-4 border-b-triptykblue"}}">{{this.monday}}</div>
      <div class="text-center {{if (eq this.tuesday this.today) "border-b-4 border-b-triptykblue"}}">{{this.tuesday}}</div>
      <div class="text-center {{if (eq this.wednesday this.today) "border-b-4 border-b-triptykblue"}} ">{{this.wednesday}}</div>
      <div class="text-center {{if (eq this.thursday this.today) "border-b-4 border-b-triptykblue"}}">{{this.thursday}}</div>
      <div class="text-center {{if (eq this.friday this.today) "border-b-4 border-b-triptykblue"}}">{{this.friday}}</div>
    </div>
    {{#each @model as |resource|}}
      <div class="grid grid-cols-6 gap-3 mt-3">
        <div class="grid grid-cols-2">
          <div class="text-center block">
            <img
                  src={{resource.image}}
                  alt="portrait-icon"
                  class="rounded-full w-16 h-16 m-auto object-cover"
                  />
          </div>
          <div class="text-center">
            {{resource.firstname}}
            {{resource.lastname}}
          </div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-t-xl text-white " {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.monday)}} title="test">
          </button>
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-b-xl text-white" {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.monday)}} >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-t-xl text-white " {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.tuesday)}} >
          </button>
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-b-xl text-white" {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.tuesday)}} >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-t-xl text-white " {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.wednesday)}} >
          </button>
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-b-xl text-white" {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.wednesday)}} >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-t-xl text-white " {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.thursday)}} >
          </button>
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-b-xl text-white" {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.thursday)}} >
          </button>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-t-xl text-white " {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.friday)}} >
          </button>
          <button type="button" class="bg-grey hover:border-8 hover:border-triptykblue text-center rounded-b-xl text-white" {{on "click" (fn this.toggleDisplayNewAssignmentModal resource.lastname resource.firstname this.friday)}} >
          </button>
        </div>
      </div>
    {{/each}}
  </div>
  {{#if this.displayNewAssignmentModal}}
    <div class="fixed top-0 bottom-0 right-0 left-0 bg-primary bg-opacity-30 transition-all duration-200">
      <div class="flex h-screen justify-center items-center">
        <div class="bg-white p-5 rounded-3xl w-[500px]">
          <div class="flex flex-row justify-center">
            <h1
              class="ml-[19px] w-full text-2xl font-bol text-start"
            >
              Assignment for:
            </h1>
            <p class="w-full font-semibold text-triptykblue text-start">
              {{this.resourceName}}
            </p>
            <button
              type="button"
              {{on "click" this.toggleDisplayNewAssignmentModal}}
            >
              <img
                src="/assets/icons/close-button.svg"
                alt="close button icon"
              />
            </button>
          </div>
          <div class="text-center mt-3">
            {{this.choosingDay}}
          </div>
          <form aria-label="newEnterpriseForm">
            <div class="flex flex-row items-stretch mt-4">
              <div>
                <label>Morning</label>
                <input
                  id="morningInput"
                  type="checkbox"
                />
              </div>
              <div>
                <label>Afternoon</label>
                <input
                  id="afternoonInput"
                  type="checkbox"
                  />
              </div>
            </div>
            <div class="flex flex-row items-stretch mt-4">
              <p class="my-auto mx-auto">Type</p>
              <select id="typeSelect">
                <option value="">--Select a type of assignment</option>
                <option value="formation">formation</option>
                <option value="consultance">consultance</option>
                <option value="projet">projet</option>
              </select>
            </div>
            <div class="flex flex-row items-stretch mt-4">
              <p class="my-auto mx-auto">Title</p>
              <select id="titleSelect">
                <option value="">--Select a title of assignment</option>
                <option value="angular">Angular</option>
                <option value="basic">Html/css</option>
                <option value="react">react</option>
              </select>
            </div>
            <div class="flex flex-row items-stretch mt-4">
              <p class="my-auto mx-auto">Enterprise</p>
              <select id="enterpriseSelect">
                <option value="">--Select an Enterprise</option>
                <option value="technocite">technocit√©</option>
                <option value="ruche">la ruche</option>
                <option value="autres">autres</option>
              </select>
            </div>
            <div class="flex flex-row items-stretch mt-4">
              <div>
                <label>Add a comment ?</label>
                <input
                  id="commentInput"
                  type="checkbox"
                  {{on "click" this.toggleHere}}
                />
              </div>
              <div>
                <label>Remote ?</label>
                <input
                  id="remoteInput"
                  type="checkbox"
                  />
              </div>
            </div>
            {{#if this.here}}
              <div>
                <p>comment</p>
                <input id="CommentText" type="text" class="bg-grey bg-opacity-20"/>
              </div>
            {{/if}}
            <button
              type="button"
              class="block mt-5 text-center py-2 px-5 rounded-md bg-navbarBg mx-auto cursor-pointer hover:bg-opacity-75 active:bg-opacity-25 active:text-navbarBg transition-all duration-200"
            >
              <p>Add enterprise</p>
            </button>
          </form>

        </div>
      </div>
    </div>
  {{/if}}
</div>