<div class="mt-12 ml-28 max-w-[90%]">
  <h1 class="text-3xl font-black text-primary">Month : {{this.currentMonth}}</h1>
  <button class="bg-error text-black rounded-lg mx-1" type="button" {{on "click" this.choosingDayLess}}> &lt; &lt; Previous</button>
  <button class="bg-triptykblue text-white rounded-lg mx-1"type="button" {{on "click" this.choosingDayActual}}>Actual</button>
  <button class="bg-green text-black rounded-lg mx-1"type="button" {{on "click" this.choosingDayPlus}}>Next &gt; &gt;</button>
  <label name="specificDay">
    SpecificDay
    {{!-- template-lint-disable no-down-event-binding --}}
    <input type="date" name="specificDay" required onkeydown="return false" label="specificDay" class="border-4 border-triptykblue" value={{this.specificDay}} {{on "change" this.choosingSpecificDay }} />
  </label>
  <div class="mt-3">
    <div class="grid grid-cols-6 gap-1 mb-5">
      <div class="text-center">Semaine</div>
      <div class="text-center {{if (eq this.monday this.todayFormat) "border-b-4 border-b-triptykblue"}}">{{this.monday}}</div>
      <div class="text-center {{if (eq this.tuesday this.todayFormat) "border-b-4 border-b-triptykblue"}}">{{this.tuesday}}</div>
      <div class="text-center {{if (eq this.wednesday this.todayFormat) "border-b-4 border-b-triptykblue"}} ">{{this.wednesday}}</div>
      <div class="text-center {{if (eq this.thursday this.todayFormat) "border-b-4 border-b-triptykblue"}}">{{this.thursday}}</div>
      <div class="text-center {{if (eq this.friday this.todayFormat) "border-b-4 border-b-triptykblue"}}">{{this.friday}}</div>
    </div>
    {{#each this.resources as |resource|}}
      <div class="grid grid-cols-6 gap-3 mt-3">
        <div class="grid grid-cols-2">
          <div class="text-center block">
            <img
                  src="/assets/images/p5.png"
                  alt="portrait-icon"
                  class="rounded-full w-16 h-16 m-auto object-cover"
                  />
          </div>
          <div class="text-center">RESSOURCE {{resource}}</div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col rounded-r-xl text-white">
          <div class="bg-triptykblue text-center rounded-t-xl text-white">
            Angular - UX / UI<br />
                  Technocité - Tournai
          </div>
          <div class="bg-grey text-center rounded-b-xl text-white"></div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col">
          <div class="bg-grey text-center rounded-t-xl text-white"></div>
          <div class="bg-green text-center rounded-b-xl text-white">Projet</div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col">
          <div class="bg-grey text-center rounded-t-xl text-white"></div>
          <div class="bg-salmon text-center rounded-b-xl text-white">
            Consultance
          </div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col">
          <div class="bg-triptykblue text-center rounded-t-xl text-white">
            Angular - UX / UI<br />
                  Technocité - Tournai
          </div>
          <div class="bg-triptykblue text-center rounded-b-xl text-white">
            Angular - UX / UI<br />
                  Technocité - Tournai
          </div>
        </div>
        <div class="grid grid-rows-2 grid-flow-col">
          <div class="bg-grey text-center rounded-t-xl text-white"></div>
          <div class="bg-purple text-center rounded-b-xl text-white">Autre Activité</div>
        </div>
      </div>
    {{/each}}
  </div>
</div>