<div class="mt-12 ml-12 mr-10 max-w-[95%]" id="enterprisePage">
  <h1 class="text-3xl font-black text-primary">Entreprises</h1>
  <div
    class="mt-1 w-max rounded-full hover:bg-navbarBg transition-all duration-200"
  >
    <button
      type="button"
      class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
      {{on "click" (fn this.toggleDisplayEnterpriseModal "new")}}
    >
      <div class="text-lg flex flex-row">
        <img
          src="/assets/icons/plus-button.svg"
          alt="plus button icon"
          class="inline h-6 w-6 my-auto"
        />
        <p class="ml-1">Ajouter une entreprise</p>
      </div>
    </button>
  </div>
  <table class="w-full min-w-[850px]">
    <thead>
      <th class="text-primary text-lg">Nom</th>
      <th class="text-primary text-lg">Ville</th>
      <th class="text-primary text-lg">Adresse email</th>
      <th class="text-primary text-lg">N° de téléphone</th>
    </thead>
    <tbody>
      {{#each @model as |enterprise|}}
        <Ui::List
          @type="enterprise"
          @object={{enterprise}}
          @displayDetails={{this.displayEnterpriseDetails}}
          @displayDelete={{this.displayDeleteEnterprise}}
        />
      {{/each}}
    </tbody>
  </table>
  {{#if this.displayNewEnterpriseModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="new"
      @objectType="Enterprise"
      @toggleDisplayModal={{this.toggleDisplayEnterpriseModal}}
      @saveFunction={{this.addEnterprise}}
    />
  {{/if}}
  {{#if this.displayEditEnterpriseModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="edit"
      @objectType="Enterprise"
      @toggleDisplayModal={{this.toggleDisplayEnterpriseModal}}
      @saveFunction={{this.editEnterprise}}
    />
  {{/if}}
  {{#if this.displayDetailsEnterpriseModal}}
    <Popups::CreateEditDetails
      @changeset={{this.changeset}}
      @popupType="details"
      @objectType="Enterprise"
      @toggleDisplayModal={{this.toggleDisplayEnterpriseModal}}
    />
  {{/if}}
  {{#if this.displayDeleteEnterpriseModal}}
    <Popups::Delete
      @type="enterprise"
      @toggleDisplayDeleteModal={{this.toggleDisplayDeleteEnterpriseModal}}
      @deleteFunction={{this.deleteEnterprise}}
      @objectIdToDelete={{this.enterprise.id}}
    />
  {{/if}}
</div>