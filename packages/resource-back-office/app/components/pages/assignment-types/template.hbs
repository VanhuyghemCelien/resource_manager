<div class="mt-12 ml-12 mr-10 max-w-[95%]" id="resourcePage">
  <h1 class="text-3xl font-black text-textPrimary">Types d'occupations</h1>
  <div
    class="mt-1 w-max rounded-full hover:bg-navbarBg transition-all duration-200"
  >
    <button
      type="button"
      class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
      {{on "click" (fn this.toggleDisplayAssignmentTypeModal "new")}}
      disabled
      {{! REMOVE DISABLED WHEN ADDING WORKS }}
    >
      <div class="text-lg flex flex-row">
        <img
          src="/assets/icons/plus-button.svg"
          alt="plus button icon"
          class="inline h-6 w-6 my-auto"
        />
        <p class="ml-1">Ajouter un type d'occupation</p>
      </div>
    </button>
  </div>
  <table class="w-full min-w-[850px]">
    <thead>
      <th class="text-textPrimary text-lg">Nom</th>
      <th class="text-textPrimary text-lg">Type ou titre</th>
      <th class="text-textPrimary text-lg">Plusieurs couleurs</th>
      <th class="text-textPrimary text-lg">Couleur</th>
    </thead>
    <tbody>
      {{#each @model as |assignmentType|}}
        <tr
          class="border-b border-textPrimary border-opacity-25 hover:bg-textSecondary hover:bg-opacity-10 transition-all duration-200"
        >
          <td
            class="w-1/4 text-center text-textPrimary font-medium px-2 text-base py-2"
          >
            {{assignmentType.name}}
          </td>
          <td class="w-1/4 text-center text-textSecondary px-2 text-base py-2">
            {{if assignmentType.color "Non" "Oui"}}
          </td>
          <td class="w-1/4 text-center text-textSecondary px-2 text-base py-2">
            {{#if assignmentType.color}}
              {{! template-lint-disable no-inline-styles }}
              {{! template-lint-disable style-concatenation }}
              <div
                class="h-6 w-6 mx-auto rounded-full"
                style="background-color: {{assignmentType.color}};"
              ></div>
            {{/if}}
          </td>
          <td class="w-[10%] text-center px-2 py-2">
            <div
              class="w-max rounded-full hover:bg-navbarBg transition-all duration-200"
            >
              <button
                type="button"
                class="px-6 py-2 text-navbarBg text-center flex flex-row text-base hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
                {{on
                  "click"
                  (fn this.displayAssignmentTypeDetails assignmentType.id)
                }}
                {{! disabled }}
                {{! REMOVE DISABLE WHEN EDITING WORKS }}
              >
                <img
                  src="/assets/icons/edit-button.svg"
                  alt="edit button icon"
                  class="inline h-5 w-auto mr-1"
                />
                Modifier
              </button>
            </div>
          </td>
          <td class="w-[10%] text-center px-2 py-2">
            <div
              class="w-max rounded-full hover:bg-warn transition-all duration-200"
            >
              <button
                type="button"
                class="px-6 py-2 text-warn text-center flex flex-row text-base hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
                {{on
                  "click"
                  (fn this.displayDeleteAssignmentType assignmentType.id)
                }}
              >
                <img
                  src="/assets/icons/delete-button.svg"
                  alt="delete button icon"
                  class="inline h-5 w-auto mr-1"
                />
                Supprimer
              </button>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if this.displayNewAssignmentTypeModal}}
    <Popups::AssignmentType
      @changeset={{this.changeset}}
      @popupType="new"
      @saveFunction={{this.addAssignmentType}}
      @toggleDisplayModal={{fn this.toggleDisplayAssignmentTypeModal "new"}}
      @toggleIsColorChecked={{this.toggleMultipleColors}}
      @multipleColors={{this.multipleColors}}
    />
  {{/if}}
  {{#if this.displayEditAssignmentTypeModal}}{{/if}}
  {{#if this.displayDeleteAssignmentTypeModal}}
    <Popups::Delete
      @type="assignment type"
      @toggleDisplayDeleteModal={{this.toggleDisplayDeleteAssignmentTypeModal}}
      @deleteFunction={{this.deleteAssignmentType}}
      @objectToDelete={{this.assignmentType}}
    />
  {{/if}}
</div>