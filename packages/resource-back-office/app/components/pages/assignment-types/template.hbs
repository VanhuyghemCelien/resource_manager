<div class="mt-12 ml-12 mr-10 max-w-[95%]" id="resourcePage">
  <h1 class="text-3xl font-black text-primary">Assignment Types</h1>
  <div
    class="mt-1 w-max rounded-full hover:bg-navbarBg transition-all duration-200"
  >
    <button
      type="button"
      class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
      {{on "click" (fn this.toggleDisplayAssignmentTypeModal "new")}}
    >
      <div class="text-lg flex flex-row">
        <img
          src="/assets/icons/plus-button.svg"
          alt="plus button icon"
          class="inline h-6 w-6 my-auto"
        />
        <p class="ml-1">Add an assignment type</p>
      </div>
    </button>
  </div>
  <table class="w-[100%] min-w-[850px]">
    <thead>
      <th class="text-primary text-lg">Name</th>
      <th class="text-primary text-lg">Multiple Colors</th>
      <th class="text-primary text-lg">Color</th>
    </thead>
    <tbody>
      {{#each @model as |assignmenttype|}}
        <tr
          class="border-b border-primary border-opacity-25 hover:bg-secondary hover:bg-opacity-10 transition-all duration-200"
        >
          <td
            class="w-1/4 text-center text-primary font-medium px-2 text-base py-2"
          >
            {{assignmenttype.assignmenttypename}}
          </td>
          <td class="w-1/4 text-center text-secondary px-2 text-base py-2">
            {{if assignmenttype.multiplecolors "Mutliple Colors" "One Color"}}
          </td>
          <td class="w-1/4 text-center text-secondary px-2 text-base py-2">
            {{#if (eq assignmenttype.multiplecolors false)}}
              {{! template-lint-disable no-inline-styles }}
              {{! template-lint-disable style-concatenation }}
              <div
                class="h-6 w-6 mx-auto rounded-full"
                style="background-color: {{assignmenttype.assignmenttypecolor}};"
              ></div>
            {{/if}}
          </td>
          <td class="w-[10%] text-center px-2 py-2">
            <div
              class="w-max rounded-full hover:bg-navbarBg transition-all duration-200"
            >
              <button
                type="button"
                class="px-6 py-2 text-navbarBg text-center flex flex-row text-base hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
                {{on
                  "click"
                  (fn this.displayAssignmentTypeDetails assignmenttype)
                }}
              >
                <img
                  src="/assets/icons/edit-button.svg"
                  alt="edit button icon"
                  class="inline h-5 w-auto mr-1"
                />
                Edit
              </button>
            </div>
          </td>
          <td class="w-[10%] text-center px-2 py-2">
            <div
              class="w-max rounded-full hover:bg-warn transition-all duration-200"
            >
              <button
                type="button"
                class="px-6 py-2 text-warn text-center flex flex-row text-base hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
                {{on
                  "click"
                  (fn this.displayDeleteAssignmentType assignmenttype)
                }}
              >
                <img
                  src="/assets/icons/delete-button.svg"
                  alt="delete button icon"
                  class="inline h-5 w-auto mr-1"
                />
                Delete
              </button>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if this.displayNewAssignmentTypeModal}}{{/if}}
  {{#if this.displayEditAssignmentTypeModal}}{{/if}}
  {{#if this.displayDeleteAssignmentTypeModal}}
    <Popups::Delete
      @type="assignment type"
      @toggleDisplayDeleteModal={{this.toggleDisplayDeleteAssignmentTypeModal}}
      @deleteFunction={{this.deleteAssignmentType}}
      @objectToDelete={{this.assignmentType}}
    />
  {{/if}}
</div>