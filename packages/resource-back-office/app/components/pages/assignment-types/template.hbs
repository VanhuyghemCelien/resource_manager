<div class="mt-12 ml-12 mr-10 max-w-[95%]" id="resourcePage">
  <h1 class="text-3xl font-black text-textPrimary">Types d'occupations</h1>
  <div class="flex flex-row">
    <div
      class="mt-1 w-max rounded-full hover:bg-navbarBg transition-all duration-200"
    >
      <button
        type="button"
        class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
        {{on "click" (fn this.toggleDisplayAssignmentTypeModal "new" "type")}}
      >
        <div class="text-lg flex flex-row">
          <img
            src="/assets/icons/plus-button.svg"
            alt="plus button icon"
            class="inline h-6 w-6 my-auto"
          />
          <p class="ml-1">Ajouter un type d'occupation</p>
        </div>
      </button>
    </div>
    <div
      class="mt-1 w-max ml-4 rounded-full hover:bg-navbarBg transition-all duration-200"
    >
      <button
        type="button"
        class="mt-0 w-max px-2 py-1 rounded-full cursor-pointer text-navbarBg hover:text-white hover:invert hover:brightness-0 transition-all duration-200"
        {{on "click" (fn this.toggleDisplayAssignmentTypeModal "new" "title")}}
      >
        <div class="text-lg flex flex-row">
          <img
            src="/assets/icons/plus-button.svg"
            alt="plus button icon"
            class="inline h-6 w-6 my-auto"
          />
          <p class="ml-1">Ajouter un titre d'occupation</p>
        </div>
      </button>
    </div>
  </div>
  <table class="w-full min-w-[850px]">
    <thead>
      <th class="text-textPrimary text-lg">Nom</th>
      <th class="text-textPrimary text-lg">Type ou titre</th>
      <th class="text-textPrimary text-lg">Plusieurs couleurs</th>
      <th class="text-textPrimary text-lg">Couleur</th>
    </thead>
    <tbody>
      {{#each @model as |assignmentType|}}
        <Ui::List
          @type="assignment-type"
          @object={{assignmentType}}
          @displayDetails={{this.displayAssignmentTypeDetails}}
          @displayDelete={{this.displayDeleteAssignmentType}}
        />
      {{/each}}
    </tbody>
  </table>
  {{#if this.displayNewAssignmentTypeModal}}
    <Forms::AssignmentType
      @page="assignment-types"
      @model={{@model}}
      @type={{this.type}}
      @changeset={{this.assignmentTypeChangeset}}
      @toggleDisplayModal={{fn
        this.toggleDisplayAssignmentTypeModal
        "new"
        this.type
      }}
      @toggleIsColorChecked={{this.toggleMultipleColor}}
      @saveFunction={{fn this.add this.type}}
      @isColorChecked={{this.multipleColor}}
    />
  {{/if}}
  {{#if this.displayEditAssignmentTypeModal}}{{/if}}
  {{#if this.displayDeleteAssignmentTypeModal}}
    <Popups::Delete
      @type="assignment type"
      @toggleDisplayDeleteModal={{this.toggleDisplayDeleteAssignmentTypeModal}}
      @deleteFunction={{this.deleteAssignmentType}}
      @objectToDelete={{this.assignmentType}}
    />
  {{/if}}
</div>